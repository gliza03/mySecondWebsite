@{
    ViewData["Title"] = "Movie Tutoring";
}
<h1>@ViewData["Title"]</h1>

<p>
    While I am definitely not an expert, I can tutor you about this hobby.<br />
    *This is only an estimated cost, actual prices may vary!
</p>

<img src="~/images/rebuilding.png" height="500" />

<div class="calculator">
    <h1>Tutoring Cost Calculator</h1>

    <div class="form-group">
        <label for="hours">Number of Hours Needed:</label>
        <input type="number" id="hours" class="form-control" step="0.5" min="0">
        <span class="error" id="hours-error">Please enter a positive number</span>
    </div>

    <div class="form-group">
        <label for="rate">Hourly Rate ($):</label>
        <input type="number" id="rate" class="form-control" value="25" readonly>
    </div>

    <div class="form-group">
        <button id="calculate" class="btn btn-primary">Calculate Total</button>
    </div>

    <div class="form-group">
        <label for="total">Total Cost ($):</label>
        <input type="text" id="total" class="form-control" readonly>
    </div>

    <a href="/" class="nav-link">← Back to Home</a>
</div>

<script src="lib/jquery/jquery.min.js"></script>
<script src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="js/site.js"></script>
